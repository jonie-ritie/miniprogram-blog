/* pages/archive/archive.wxss */

.archive-title-all {
  color: #000;
  font-size: 400;
  font-size: 28rpx;
  margin-left: 16rpx;
  margin-right: 16rpx;
  padding: 8rpx;
  border-radius: 8rpx;
  background-color: #ffc0cb;
  transition: all 0.2s ease;
}
.archive-title-all_hover {
  filter: brightness(0.9);
}
.archive-title {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-box-align: baseline;
  -webkit-justify-content: space-between;
  justify-content: space-between;
  -webkit-align-items: baseline;
  align-items: baseline;
  margin: 24rpx 30rpx 0rpx 48rpx;
  font-size: 64rpx;
  font-weight: 600;
  padding-bottom: 10px;
  box-shadow: rgba(33, 35, 38, 0.1) 0px 10px 10px -10px;
}
.archive-container {
  padding-top: 25rpx;
  padding-bottom: 30rpx;
  padding-left: 24rpx;
  padding-right: 24rpx;
  filter: contrast(0.2);
  transition: all 0.3s ease;
}
.archive-container_hover {
  filter: none;
  transform: scale(0.98);
  background: rgba(0,0,0,.05);
}
.archive-item {
  display: flex;
  position: relative;
  border-radius: 16rpx;
  /* border: 1px var(--themeColor) solid; */
  /* box-shadow: rgba(0, 0, 0, 0.45) 0px 25px 20px -25px; */
  align-items: center;
}
.archive-item-date {
  margin: 14rpx 28rpx;
  font-size: 32rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: var(--SubtitleColor);
  font-weight: 500;
}
.archive-item-title {
  margin: 14rpx 28rpx;
  font-size: 40rpx;
  font-weight: 600;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.archive-item-category {
  margin: 0rpx 28rpx;
  margin-left: 256rpx;
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: var(--SubtitleColor);
}
.loadingmore,
.showerror {
  margin: 40rpx 0;
  color: var(--SubtitleColor);
  text-align: center;
}

/* 返回顶部 */
.goTop{
  height: 80rpx;
  width: 80rpx;
  position: fixed;
  bottom: 40rpx;
  background: rgba(0,0,0,.3);
  right: 40rpx;
  border-radius: 30%;
  z-index: 9;
}
.goTop image {
  position: relative;
  height: 45rpx;
  width: 45rpx;
  margin: 18rpx;
  margin-top: 14rpx;
  font-size: 19px;
  transition: all 0.3s ease;
}
.goTop:hover {
  background: rgba(0,0,0,0.9);
}
.goTop:hover image {
  margin-top: 6rpx;
}