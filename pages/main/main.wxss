.mid_w_share {
  margin: 30rpx auto;
  width: 700rpx;
  height: 160rpx;
  background-color: #fff;
  color: #949494;
  border-radius: 20rpx;
  display: flex;
  justify-content: space-between;
  padding: 0 100rpx;
}
.mid_w_share .mid_item {
  width: 150rpx;
  height: 160rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.mid_w_share .mid_item image {
  width: 55%;
}
.mid_w_share .mid_item .text_ {
  padding: 10rpx 0;
  font-size: 25rpx;
  font-weight: 500;
}
.mid_item {
  position: relative;
}
.mid_item .contact {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
  z-index: 1;
}
.function_w {
  width: 700rpx;
  height: auto;
  margin: 30rpx auto;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 20rpx;
}
.function_w .item_f {
  position: relative;
  display: flex;
  transition: all 0.2s linear;
}
.function_w .item_f_hover {
  background: rgba(0, 0, 0, 0.05);
}
.function_w .item_f::after {
  position: absolute;
  content: '';
  top: calc(50% - 18rpx);
  right: 60rpx;
  height: 18rpx;
  width: 18rpx;
  border-top: 4rpx solid #ccc;
  border-right: 4rpx solid #ccc;
  transform: rotateZ(45deg);
}
.function_w .item_f .icon_i {
  flex: 1;
  height: 132rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.function_w .item_f .icon_i image {
  width: 50%;
}
.function_w .item_f .title_w {
  flex: 5;
  font-size: 36rpx;
  line-height: 132rpx;
}
.item_f {
  position: relative;
}
.item_f .feed,
.item_f .contact {
  position: absolute;
  width: 100%;
  height: 100%;
  opacity: 0;
  z-index: 1;
}
.contact_w {
  width: 700rpx;
